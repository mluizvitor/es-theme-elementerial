<!--
  Theme: Elementerial
  Author: mluizvitor
-->

<theme>
  <formatVersion>7</formatVersion>

  <include>./variables.xml</include>

  <subset name="Style" displayName="Style">
    <include name="dark" displayName="Dark">./settings/colors/dark.xml</include>
    <include name="light" displayName="Light">./settings/colors/light.xml</include>
  </subset>

  <subset name="FontSize" displayName="Font Size">
    <include name="medium" />
    <include name="large" />
    <include name="small" />
  </subset>

  <subset name="PlayVideo" displayName="Video on carousel">
    <include name="true" displayName="Enabled">./settings/display/background/carousel-video-on.xml</include>
    <include name="false" displayName="Disabled"/>
  </subset>

  <subset name="Background Style" displayName="Background style">
    <include name="default" displayName="Default">./settings/display/background/default.xml</include>
    <include name="random" displayName="Random">./settings/display/background/random.xml</include>
    <include name="custom" displayName="Custom">./settings/display/background/custom.xml</include>
  </subset>

  <subset name="Status Bar" displayName="Status Bar">
    <include name="complete" displayName="Clock + Battery">./settings/display/statusbar/complete.xml</include>
    <include name="clock" displayName="Clock">./settings/display/statusbar/clock.xml</include>
    <include name="battery" displayName="Battery">./settings/display/statusbar/battery.xml</include>
    <include name="hidden" displayName="Hidden">./settings/display/statusbar/hidden.xml</include>
  </subset>

  <subset name="VideoSnapshot" displayName="Video Snapshot" appliesTo="video, elementflix">
    <include name="videoScreenshot" displayName="Screenshot">./settings/display/video/snapshot-screenshot.xml</include>
    <include name="videoThumbnail" displayName="Thumbnail">./settings/display/video/snapshot-thumbnail.xml</include>
  </subset>

  <include>./settings/colors/scheme.xml</include>
  <include>./settings/display/view-general.xml</include>
  <include>./settings/display/view-system.xml</include>
  <include>./settings/display/view-basic.xml</include>
  <include>./settings/display/view-detailed.xml</include>
  <include>./settings/display/view-grid/grid.xml</include>
  <include>./settings/display/view-boxes.xml</include>
  <include>./settings/display/view-video.xml</include>
  <include>./settings/display/view-elementflix/elf.xml</include>
  <include>./settings/display/view-menu.xml</include>

</theme>
